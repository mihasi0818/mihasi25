<div class="ui middle aligned grid mt15">
  <div class="column">
    <h2 class="ui teal image header">
      <i class="user icon"></i>
      <div class="content">
        利用者一覧
      </div>
    </h2>

    <div id="users" class="mb20">
      <% @users.each do |user| %>
        <div class="ui card">
          <%= render user %>
          <div class="extra content">
            <%= link_to user, class: "ui button" do %>
              <i class="icon user circle"></i>
              プロフィール詳細へ
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to signup_path, class: "ui column teal button" do %>
      <i class="icon user"></i>
      アカウント新規作成
    <% end %>

  </div>
</div>
<nav class="pagy-nav pagination">
  <span class="page prev <%= "disabled" if @pagy.prev.nil? %>" >
    <% if @pagy.prev %>
      <%= link_to "前", url_for(page: @pagy.prev, only_path: true), rel: "prev" %>
    <% else %>
      <span class="disabled">前</span>
    <% end %>
  </span>
  
  <% @pagy.series.each do |item| %>
    <% if item.is_a? Integer %>
      <span class="page <%= "active" if item == @pagy.page %>"><%= item %></span>
    <% else %>
      <span class="page <%= "gap" %>">&#x2026;</span>
    <% end %>
  <% end %>

  <span class="page next <%= "disabled" if @pagy.next.nil? %>">
    <% if @pagy.next %>
      <%= link_to "次", url_for(page: @pagy.next, only_path: true), rel: "next" %>
    <% else %>
      <span class="disabled">次</span>
    <% end %>
  </span>
</nav>

<style>
  
  .pagination {
    display: -ms-flexbox;
    display: flex;
    padding-left: 0;
    list-style: none;
    border-radius: 0.25rem;
    font-size: 20px;
    justify-content: space-evenly;
}
.page a, .next a, .last a, .first a, .prev a {
    color: black;
    margin-left: 10px;
    color: #00bb5d;
    margin-right: 10px;
}
.ui {
  background-image: linear-gradient(45deg, rgb(255, 167, 167) 35%, transparent 35%, transparent 65%, rgba(0, 47, 255, 0.2) 65%);

}
</style>